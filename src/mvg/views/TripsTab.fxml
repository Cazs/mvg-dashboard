<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Tab fx:id="tripsTab" text="Trips" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="mvg.controllers.TripsController">
    <content>
        <TableView fx:id="tblTrips" editable="true" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" minWidth="80.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Trip ID" visible="false"/>
                <TableColumn fx:id="colClient" minWidth="80.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Client"/>
                <TableColumn fx:id="colRequest" minWidth="120.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Description"/>
                <TableColumn fx:id="colAddress" minWidth="120.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Address" visible="false"/>
                <TableColumn fx:id="colDestination" minWidth="120.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Destination" visible="false"/>
                <TableColumn fx:id="colContactPerson" minWidth="120.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Contact Person" visible="false"/>
                <TableColumn fx:id="colStatus" minWidth="80.0" maxWidth="1.7976931348623157E308" text="Status" visible="true"/>
                <TableColumn fx:id="colDateLogged" editable="false" minWidth="90.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Date Logged"/>
                <TableColumn fx:id="colDateAssigned" editable="false" minWidth="90.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Date Assigned"/>
                <TableColumn fx:id="colDateScheduled" editable="false" minWidth="90.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Date Scheduled"/>
                <TableColumn fx:id="colCreator" minWidth="150.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Creator" visible="false"/>
                <TableColumn fx:id="colTotal" minWidth="100.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Total"/>
                <TableColumn fx:id="colExtra" minWidth="80.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Extra" visible="false"/>
                <TableColumn fx:id="colAction" minWidth="400.0" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="Action"/>
            </columns>
        </TableView>
    </content>
</Tab>
