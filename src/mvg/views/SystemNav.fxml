<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane styleClass="sys-nav" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mvg.controllers.NavController">
   <center>
        <BorderPane maxHeight="80.0" style="-fx-border-insets: -50 -10 0 -10;" BorderPane.alignment="CENTER">
         <center>
                <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                  <VBox alignment="CENTER">
                     <children>
                              <Label fx:id="company_name" alignment="CENTER" contentDisplay="CENTER" text="MVG Dashboard" textFill="WHITE">
                                  <font>
                                      <Font size="30.0" />
                                  </font>
                              </Label>
                              <Label fx:id="lblScreen" alignment="CENTER" contentDisplay="CENTER" text="" textFill="WHITE">
                                  <font>
                                      <Font size="24.0" />
                                  </font>
                              </Label>
                     </children>
                  </VBox>
                    </children>
                </HBox>
         </center>
         <right>
                  <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
               <children>
                    <ImageView fx:id="btnBack" fitHeight="60.0" fitWidth="60.0" onMouseClicked="#previousScreen" pickOnBounds="true" preserveRatio="true" styleClass="btnPrev" />
                    <ImageView fx:id="btnNext" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="btnNext" />
                    <ImageView fitHeight="60.0" fitWidth="60.0" onMouseClicked="#showMain" pickOnBounds="true" preserveRatio="true" styleClass="btnHome"/>
                    <ImageView fitHeight="60.0" fitWidth="60.0" onMouseClicked="#showLogin" pickOnBounds="true" preserveRatio="true" styleClass="btnLogin" />
                    <ImageView fitHeight="60.0" fitWidth="60.0" onMouseClicked="#forceSynchronise" pickOnBounds="true" preserveRatio="true" styleClass="btnRefresh" />
               </children>
                  </HBox>
         </right>
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                      <HBox alignment="CENTER_LEFT">
                          <children>
                              <ImageView fx:id="img_logo" fitHeight="70.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../gfx/logo.png" />
                                  </image>
                                  <HBox.margin>
                                      <Insets left="10.0" />
                                  </HBox.margin>
                              </ImageView>
                                <ImageView fx:id="img_profile" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" styleClass="btnProfile" />
                                <Label fx:id="user_name" text="not signed in" textFill="WHITE" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </Label>
                          </children>
                      </HBox>
               </children>
            </VBox>
         </left>
        </BorderPane>
   </center>
</BorderPane>
